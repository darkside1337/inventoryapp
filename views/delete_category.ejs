<div class="container">
    <div class="table_component" role="region" tabindex="0">
        <table>
            <div class="flex text-center flex-col mb-8 gap-16">
                <h2>Are you sure you want to delete this category?:</h2>
                <h2>
                    <%= category.name %>
                </h2>
                <p class="mb-8">
                    <%= category.description %>
                </p>
                <div>
                    <form action="<%= category.url %>/delete?_method=DELETE" method="POST">
                        <button type="submit" class="delete-btn" <%=categoryIsEmpty ? null : "disabled" %>>
                            Delete Category
                        </button>
                    </form>
                </div>
                <% if (!categoryIsEmpty) { %>
                    <h2 class="text-center">You'll need to delete the following items before deleting the category:</h2>
                    <table>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Last Modified</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% items.forEach(item=> { %>
                                <tr>
                                    <td>
                                        <%= item.name %>
                                    </td>
                                    <td>
                                        <%= item.description %>
                                    </td>
                                    <td>
                                        <%= item.updatedAt.toLocaleString() %>
                                    </td>
                                    <td class="btnsTd">
                                        <form action="<%= item.url %>/delete?_method=DELETE" method="POST">
                                            <button type="submit" class="delete-btn">
                                                Delete Item
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <% } %>
            </div>
        </table>
    </div>




</div>