<div class="container">
    <div class="table_component" role="region" tabindex="0">
        <table class="mb-8">
            <div class="flex justify-between items-center mb-8 px-8">
                <h2>All Categories</h2>
                <a href="/categories/new" role="button" class="block anchorBtn bgBlue">Add Category</a>
            </div>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Last Modified</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(item=> { %>
                    <tr>
                        <td>
                            <%= item.name %>
                        </td>
                        <td>
                            <%= item.description %>
                        </td>
                        <td>
                            <%= item.updatedAt.toLocaleString() %>
                        </td>
                        <td class="btnsTd">
                            <a class="anchorBtn bgYellow" href="<%= item.url %>">View Category</a>
                            <a class="anchorBtn bgBlue" href="<%= item.url %>/update">Edit Category</a>
                            <a class="anchorBtn bgRed" href="<%= item.url %>/delete">Delete Category</a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        <div>
            <a href="/categories/new" role="button" class="block mx-auto anchorBtn bgBlue ">Add Category</a>
        </div>
    </div>




</div>